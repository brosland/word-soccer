<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/fi.jamk.wordsoccer">

	<!-- state disabled + red card -->
	<item
		app:state_disabled_red_card="true"
		android:drawable="@drawable/football_red_card"/>

	<!-- state disabled + yellow card -->
	<item
		app:state_disabled_yellow_card="true"
		android:drawable="@drawable/football_yellow_card"/>

	<!-- state disabled -->
	<item
		app:state_disabled="true"
		android:drawable="@drawable/football"/>

	<!-- state used + yellow card -->
	<item
		app:state_used_yellow_card="true"
		android:drawable="@drawable/blue_football_yellow_card"/>

	<!-- state used -->
	<item
		app:state_used="true"
		android:drawable="@drawable/blue_football"/>

	<!-- state default + yellow card -->
	<item
		app:state_default_yellow_card="true"
		android:drawable="@drawable/blue_football_yellow_card"/>

	<!-- default mode -->
	<item android:drawable="@drawable/blue_football"/>
</selector>