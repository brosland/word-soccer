<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/fi.jamk.wordsoccer">

	<!-- state disabled + red card -->
	<item
		android:drawable="@drawable/input_letter_disabled_with_red_card"
		app:state_disabled_red_card="true"/>

	<!-- state disabled + yellow card -->
	<item
		android:drawable="@drawable/input_letter_disabled_with_yellow_card"
		app:state_disabled_yellow_card="true"/>

	<!-- state disabled -->
	<item
		android:drawable="@drawable/input_letter_disabled"
		app:state_disabled="true"/>

	<!-- state used + yellow card -->
	<item
		android:drawable="@drawable/input_letter_used_with_yellow_card"
		app:state_used_yellow_card="true"/>

	<!-- state used -->
	<item
		android:drawable="@drawable/input_letter_used"
		app:state_used="true"/>

	<!-- state default + yellow card -->
	<item
		android:drawable="@drawable/input_letter_default_with_yellow_card"
		app:state_default_yellow_card="true"/>

	<!-- default mode -->
	<item
		android:drawable="@drawable/input_letter_default"/>

</selector>