<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme. -->
	<declare-styleable name="AppTheme">
		<attr name="freeLetterButtonStyle" format="reference" />
	</declare-styleable>

	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="freeLetterButtonStyle">@style/InputLetterButton</item>
	</style>



	<!-- ************************** Game Activity ************************** -->

	<!-- Game Activity: Header -->
	<style name="GameHeader">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:background">#99ffffff</item>
	</style>

	<style name="PlayerNameTextView">
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="PlayerANameTextView" parent="PlayerNameTextView">
		<item name="android:background">#00aaff</item>
	</style>

	<style name="PlayerBNameTextView" parent="PlayerNameTextView">
		<item name="android:background">#ff0000</item>
	</style>

	<style name="PlayerScoreTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#555555</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">5dp</item>
		<item name="android:background">#ffffff</item>
	</style>

	<style name="CardTextView">
		<item name="android:layout_width">16dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="PlayerACardTextView" parent="CardTextView">
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:layout_marginLeft">4dp</item>
	</style>

	<style name="PlayerARedCardTextView" parent="PlayerACardTextView">
		<item name="android:background">@drawable/red_card</item>
	</style>

	<style name="PlayerAYellowCardTextView" parent="PlayerACardTextView">
		<item name="android:background">@drawable/yellow_card</item>
	</style>

	<style name="PlayerBCardTextView" parent="CardTextView">
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:layout_marginLeft">0dp</item>
	</style>

	<style name="PlayerBRedCardTextView" parent="PlayerBCardTextView">
		<item name="android:background">@drawable/red_card</item>
	</style>

	<style name="PlayerBYellowCardTextView" parent="PlayerBCardTextView">
		<item name="android:background">@drawable/yellow_card</item>
	</style>

	<style name="TimeTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#555555</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">5dp</item>
	</style>



	<!-- ****************** Game Activity: Round fragment ****************** -->

	<!-- Word list -->
	<style name="WordListView">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:background">#99ffffff</item>
	</style>

	<style name="WordListItemView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:background">#99ffffff</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="WordListItemNumberView" parent="WordListItemView">
		<item name="android:layout_width">40dp</item>
		<item name="android:gravity">center</item>
		<item name="android:background">#ffffff</item>
	</style>

	<style name="WordListPendingWord" parent="WordListItemView">
		<item name="android:textColor">#ffff66</item>
	</style>

	<style name="WordListValidWord" parent="WordListItemView">
		<item name="android:textColor">#333</item>
	</style>

	<style name="WordListInvalidWord" parent="WordListItemView">
		<item name="android:textColor">#cccccc</item>
	</style>


	<!-- Selected letters -->
	<style name="SelectedLettersLinearLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_gravity">left|top</item>
		<item name="android:background">#99ffffff</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingRight">5dp</item>
	</style>

	<style name="SelectedLetterButton" parent="@android:style/Widget.Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/input_letter_button</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:layout_marginLeft">5dp</item>
	</style>

	<style name="SubmitButton" parent="@android:style/Widget.Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">2.5</item>
		<item name="android:background">#aaa</item>
		<item name="android:textColor">#333</item>
		<item name="android:layout_marginLeft">5dp</item>
	</style>


	<!-- Input letters -->
	<style name="InputLettersLinearLayout">
		<item name="android:background">#99ffffff</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">5dp</item>
	</style>

	<style name="InputLetterButton" parent="@android:style/Widget.Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/input_letter_button</item>
		<item name="android:scaleType">center</item>
		<item name="android:textColor">#333</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginLeft">5dp</item>
	</style>
</resources>